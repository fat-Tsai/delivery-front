.header {
  width: 100%;
}
.header swiper {
  width: 100%;
  height: 400rpx;
}
.header swiper .swiper_img {
  width: 100%;
}
.section {
  display: flex;
  justify-content: center;
  margin: 0 30rpx;
  background-color: #fff;
  border-radius: 20rpx;
  box-shadow: 6rpx 6rpx 6rpx 1rpx rgba(0, 0, 0, 0.2);
  margin-top: 20rpx;
}
.section .section_content {
  display: flex;
  justify-content: space-between;
  width: 690rpx;
  height: 224rpx;
}
.section .section_content .left_ziqu,
.section .section_content .right_waimai {
  width: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  position: relative;
}
.section .section_content image {
  width: 100rpx;
  height: 100rpx;
}
.section .section_content .type {
  font-size: 38rpx;
  color: #565657;
  font-weight: bold;
}
.section .section_content .dec {
  font-size: 22rpx;
  color: #a6a9aa;
}
.section .section_content .left_ziqu::after {
  content: "";
  display: block;
  width: 1rpx;
  height: 150rpx;
  background-color: #a6a9aa88;
  position: absolute;
  right: 0;
  top: 0;
  bottom: 0;
  margin: auto;
}
